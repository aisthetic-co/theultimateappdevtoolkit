{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx --watch src/index.ts",
    "build": "npm run clean && tsc && npm run copy-views",
    "clean": "rimraf dist/",
    "start": "node ./dist/index.js",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "copy-views": "copyfiles -u 1 \"./src/**/*.ejs\" \"dist\"",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "prepare": "husky"
  },
  "author": "Harshad Birajdar <hbirajdar1@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.25.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/eslint-plugin": "^1.1.43",
    "@vitest/ui": "^3.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-perfectionist": "^4.12.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript": "5.8",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "env-var": "^7.5.0",
    "express": "^5.1.0",
    "helmet": "^6.2.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "rotating-file-stream": "^3.2.6",
    "zod": "^3.24.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format:fix",
      "npm run lint"
    ]
  }
}
